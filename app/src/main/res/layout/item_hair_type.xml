<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="hairTypeBean"
            type="com.hair.hairstyle.net.result.HairTypeResult.HairstyleListBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                bind:image="@{hairTypeBean.imgurl}"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/text_hair_type_drawable"
                android:text="@{hairTypeBean.hairsytle_label}"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14"
                tools:text="2222222222"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{hairTypeBean.name}"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="111111" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{hairTypeBean.english_sign}"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/sp_14"
            tools:text="111111" />

    </LinearLayout>
</layout>